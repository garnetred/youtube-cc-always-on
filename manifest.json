{
  "manifest_version": 3,
  "name": "Youtube CC Always On",
  "version": "0.0.1",
  "description": "This browser extension enables Youtube closed captions by default.",
  "permissions": ["scripting"],
  "icons": {
    "16": "images/cc-emoji-16.png",
    "32": "images/cc-emoji-32.png",
    "48": "images/cc-emoji-48.png",
    "128": "images/cc-emoji-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js"],
      "extension_ids": []
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{a354ca05-b277-421c-b9e8-0fc124858ccb}"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  }
}
